# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# æå‰å®šä¹‰ã€Œå…³é—­i3-nagbarã€çš„å¿«æ·å˜é‡ï¼Œä¸€æ¬¡å®šä¹‰ï¼Œå¤šå¤„ä½¿ç”¨
set $close_nagbar exec --no-startup-id pkill -f "i3-nagbar -m"

bindsym $mod+0 exec --no-startup-id i3-nagbar -m "(l)ock | (e)xit | switch_(u)ser | (s)uspend | (h)ibernate | (r)eboot | (Shift+s)hutdown" -t warning ; mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id ~/.scripts/i3lock/lock.sh ; $close_nagbar ; mode "default"
    bindsym s exec --no-startup-id i3exit suspend ; $close_nagbar ; mode "default"
    bindsym u exec --no-startup-id i3exit switch_user ; $close_nagbar ; mode "default"
    bindsym e exec --no-startup-id i3exit logout ; $close_nagbar ; mode "default"
    bindsym h exec --no-startup-id i3exit hibernate ; $close_nagbar ; mode "default"
    bindsym r exec --no-startup-id i3exit reboot ; $close_nagbar ; mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown ; $close_nagbar ; mode "default"

    bindsym Return $close_nagbar ; mode "default"
    bindsym Escape $close_nagbar ; mode "default"
}

# Resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode
        # Pressing left will shrink the windowâ€™s width.
        # Pressing right will grow the windowâ€™s width.
        # Pressing up will shrink the windowâ€™s height.
        # Pressing down will grow the windowâ€™s height.
        bindsym h resize shrink width 5 px or 5 ppt
        bindsym j resize grow height 5 px or 5 ppt
        bindsym k resize shrink height 5 px or 5 ppt
        bindsym l resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # exit resize mode: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

